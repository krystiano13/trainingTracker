---
import Layout from '../components/Layout.astro';
import Background from '../assets/gymbg.jpg';
---

<Layout>
	<div class="background" />
	<section class="content">
		<h1>Training Tracker</h1>
		<a href="/login"><button>Proceed</button></a>
	</section>
</Layout>

<style>
	body {
		position: relative;
		display : flex;
		justify-content: center;
		align-items: center;
	}

	img, .content {
		position : absolute;
	}

	.background{
		width : 100vw;
		height : 100vh;
		background:
        linear-gradient(
          rgba(0, 0, 0, 0.6), 
          rgba(0, 0, 0, 0.6)
        ),
		url('../assets/gymbg.jpg')
    }
	

	.content {
		z-index : 1000;

		display : flex;
		justify-content: center;
		align-items: center;
		flex-direction: column;
	}

	.content > h1 {
		color : white;
		font-size : 5rem;
		font-weight: 700;
	}

	.content > a {
		width : 40%;
		height : 15%;
	}

	a > button {
		width : 100%;
		height : 100%;
		padding : 1rem;
		font-size : 1.5rem;
		cursor : pointer;
	}

</style>

