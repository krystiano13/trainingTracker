---
import Layout from '../components/Layout.astro';
---

<Layout>
	<div class="text"></div>
	<section class="content">
		<div class="triangle"></div>
	</section>	
</Layout>

<style>
	body {
		background-color: #2c1d33;
		display : flex;

		.text {
			width : 60%;
			height : 100%;
			z-index : 1000;
			background-color: #2c1d33;
			border-top-right-radius: 50%;
		}

		.content {
			width : 40%;
			height : 100vh;
			background: linear-gradient(45deg,#8c0eac,#2baecf);

			.triangle {
				width : 30%;
				height : 120%;
				background-color: #2c1d33;
				transform: translateX(-50%) translateY(-10%) rotate(5deg);
			}
		}
	}
</style>

