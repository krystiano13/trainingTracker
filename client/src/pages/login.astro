---
import Layout from "../components/Layout.astro";
---

<Layout>
  <form class="d-flex flex-column align-items-center justify-content-center">
    <input name="username" placeholder="username" type="text" />
    <input name="password" placeholder="password" type="password" />
    <input name="password2" id="repeat" class="d-none" placeholder="repeat password" type="password" />
    <button id="submit" type="submit">Log In</button>
    <p>Don't have an account ?</p>
  </form>
</Layout>

<script>
    if(localStorage.getItem('username')) {
      window.location.href = '/panel';
    }

    type successResponse = { msg? : string, user?: string, err?: string };
    const modeChangeLabel:HTMLParagraphElement|null = document.querySelector('p');
    const hiddenInput:HTMLInputElement|null = document.querySelector('#repeat');
    const submitButton = document.querySelector('#submit');
    const form = document.querySelector('form');
    let loginMode:boolean = true;
    let url = 'http://localhost/trainingTracker/server/src/accessAccount.php';

    const useData = (data: successResponse) => {
      if(loginMode && data.user) {
        localStorage.setItem('username',data.user);
        window.location.href = '/panel';
      }
      
      else if(!data.user && data.msg) {
        alert('Created an account !!!');
      }
    }

    const sendData = async (e : SubmitEvent) => {
      e.preventDefault();
      const formData = new FormData(form as HTMLFormElement | undefined);

      if(loginMode) {
        formData.delete('password2');
      } 

      await fetch(url, { method : 'post', body: formData})
        .then(res => res.json())
        .then(data => {
          useData(data);
        })
    }

    form?.addEventListener('submit',sendData);

    modeChangeLabel?.addEventListener('click',() => {
        loginMode = !loginMode;
        if(loginMode) {
            modeChangeLabel.innerText = "Don't have an account ?";
            hiddenInput?.classList.add("d-none");
            url = 'http://localhost/trainingTracker/server/src/accessAccount.php';
            if(submitButton != undefined) {
                submitButton.innerHTML = "Log In";
           }   
        }
        else {
            modeChangeLabel.innerText = "Have an account already ?";
            hiddenInput?.classList.remove("d-none");
            url = 'http://localhost/trainingTracker/server/src/createAccount.php'
            if(submitButton != undefined) {
                submitButton.innerHTML = "Register";
            } 
        }
    });
</script>

<style>
  body {
    background-color: #2c1d33;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  form {
    background-color: #333;
    border-radius: 2rem;
    padding: 3rem;
    animation: formAppear 400ms;

    @media screen and (min-width : 2400px) {
        padding: 6rem;
        border-radius: 4rem;
    }

    @media screen and (min-width : 3200px) {
        padding: 9rem;
        border-radius: 6rem;
    }
  }

  form > * {
    margin-bottom: 2rem;

    @media screen and (min-width : 2400px) {
       margin-bottom: 4rem;
    }

    @media screen and (min-width : 3200px) {
       margin-bottom: 6rem;
    }
  }

  input {
    font-size: 1.15rem;
    padding: 0.5rem;
    padding-right : 2rem;
    padding-left : 0rem;
    outline : none;
    border: none;
    background-color: transparent;
    color : white;
    border-bottom : solid whitesmoke 1px;

    @media screen and (min-width : 2400px) {
       font-size: 1.6rem;
       padding: 1.5rem;
       padding-left : 0rem;
       padding-right : 4rem;
    }

    @media screen and (min-width : 3200px) {
       font-size: 2.4rem;
       padding: 2.5rem;
       padding-left : 0rem;
       padding-right : 8rem;
    }

    transition: border-color 250ms;
    will-change: border-color;
  }

  input:focus {
    border-color : #a026d8;
  }

  input::placeholder {
    color : #9c9c9c;
  }

  button {
    padding: 0.4rem;
    padding-right : 6rem;
    padding-left : 6rem;
    font-size: 1.15rem;
    border-radius: 2rem;
    margin-top : 1rem;
    margin-bottom: 1rem;
    border: none;
    background: linear-gradient(45deg, #8c0eac, #2baecf);
    color : white;

    @media screen and (min-width : 2400px) {
        padding: 0.8rem;
        padding-right : 8rem;
        padding-left : 8rem;
        font-size: 1.3rem;
        border-radius: 4rem;
        margin-top : 2rem;
        margin-bottom: 2rem;
    }

    @media screen and (min-width : 3200px) {
        padding: 1.6rem;
        padding-right : 16rem;
        padding-left : 16rem;
        font-size: 2.4rem;
        border-radius: 6rem;
        margin-top : 4rem;
        margin-bottom: 4rem;
    }

    transition: transform 250ms;
    will-change: transform;
  }

  button:hover {
    transform : scale(1.02);
  }

  p {
    margin-top : 2.5rem;
    font-size : 1.15rem;
    text-decoration: none;
    color : #8c0eac;
    font-weight: 500;
    transition: color 250ms;
    cursor: pointer;

    @media screen and (min-width : 2400px){
        margin-top : 4rem;
        font-size : 1.5rem;
    }

    @media screen and (min-width : 3200px){
        margin-top : 6rem;
        font-size : 2.4rem;
    }
  }

  p:hover {
    color : #a026d8;
  }

  @keyframes formAppear {
    from {
        opacity : 0;
        transform: scale(0) translateY(100vh);
    }

    to {
        opacity : 1;
        transform: scale(1) translateY(0vh);
    }
  }

</style>
