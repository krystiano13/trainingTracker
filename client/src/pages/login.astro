---
import Layout from "../components/Layout.astro";
---

<Layout>
  <form class="d-flex flex-column align-items-center justify-content-center">
    <input placeholder="username" type="text" />
    <input placeholder="password" type="password" />
    <button type="submit">Log In</button>
    <a href="/register">Don't have an account ?</a>
  </form>
</Layout>

<style>
  body {
    background-color: #2c1d33;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  form {
    background-color: #333;
    border-radius: 2rem;
    padding: 3rem;
    animation: formAppear 400ms;
  }

  form > * {
    margin-bottom: 2rem;
  }

  input {
    font-size: 1.15rem;
    padding: 0.5rem;
    padding-right : 2rem;
    padding-left : 0rem;
    outline : none;
    border: none;
    background-color: transparent;
    color : white;
    border-bottom : solid whitesmoke 1px;

    transition: border-color 250ms;
    will-change: border-color;
  }

  input:focus {
    border-color : #a026d8;
  }

  input::placeholder {
    color : #9c9c9c;
  }

  button {
    padding: 0.4rem;
    padding-right : 6rem;
    padding-left : 6rem;
    font-size: 1.15rem;
    border-radius: 2rem;
    margin-top : 1rem;
    margin-bottom: 1rem;
    border: none;
    background: linear-gradient(45deg, #8c0eac, #2baecf);
    color : white;

    transition: transform 250ms;
    will-change: transform;
  }

  button:hover {
    transform : scale(1.02);
  }

  a {
    margin-top : 2.5rem;
    font-size : 1.15rem;
    text-decoration: none;
    color : #8c0eac;
    font-weight: 500;
    transition: color 250ms;
  }

  a:hover {
    color : #a026d8;
  }

  @keyframes formAppear {
    from {
        opacity : 0;
        transform: scale(0) translateY(100vh);
    }

    to {
        opacity : 1;
        transform: scale(1) translateY(0vh);
    }
  }

</style>
