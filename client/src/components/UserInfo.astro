---
import { PanelHeading } from "../ReactComponents/panelHeading";
---

<nav class="d-flex align-items-center justify-content-end">
    <PanelHeading client:load />
    <button class="logout">Log Out</button>
</nav>

<script>
    const button:HTMLButtonElement|null = document.querySelector('button');
    button?.addEventListener('click', ():void => {
        localStorage.removeItem('username');
        window.location.href = '/login';
    })
</script>

<style>
    nav {
        width : 100vw;
        height : 60px;

        background: linear-gradient(45deg, #2baecf, #8c0eac);

        @media screen and (min-width : 2400px){
            height : 120px;
        }

        .username {
            color : white;
            font-size : 1.1rem;
            height : 100%;

            display : flex;
            align-items: center;

            .icon {
                height : 100%;
                padding : 7%;
            }
        }

        .logout {
            background-color: #2c1d33;
            cursor: pointer;
            border: none;
            color: white;
            border-radius: 2rem;
            font-size : 1rem;
            padding : 0.5rem;
            padding-left : 1.25rem;
            padding-right : 1.25rem;
            margin-left : 1rem;
            margin-right : 1rem;

            transition: 250ms background-color;
            will-change: background-color;
        }

        .logout:hover {
            background-color: #2baecf;
        }
    }
</style>