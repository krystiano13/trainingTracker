---
import { PanelHeading } from "../ReactComponents/panelHeading";
---

<nav class="d-flex align-items-center justify-content-end container-fluid">
    <PanelHeading client:load />
    <button class="logout">Log Out</button>
</nav>

<script>
    const button:HTMLButtonElement|null = document.querySelector('button');
    button?.addEventListener('click', ():void => {
        localStorage.removeItem('username');
        window.location.href = '/login';
    })
</script>

<style>
    nav {
        width : 100vw;
        height : 60px;
        position: absolute;
        z-index: 1300;
        background: linear-gradient(45deg, #2baecf, #8c0eac);
        font-family: 'Montserrat' , sans-serif;

        @media screen and (min-width : 2400px){
            height : 120px;
        }

        @media screen and (max-width : 992px){
            height : 120px;
        }

        .username {
            color : white;
            font-size : 1.1rem;
            height : auto;
            margin : 0;

            @media screen and (max-width : 992px){
                font-size : 1.5rem;
            }  

            @media screen and (min-width : 2400px) {
                font-size : 1.5rem;
            }

            @media screen and (min-width : 3200px) {
                font-size : 2rem;
            }

            display : flex;
            align-items: center;

            .icon {
                height : 60px;

                @media screen and (min-width : 2400px){
                    height : 120px;
                }

                padding : 9%;
            }
        }

        .logout {
            background-color: #2c1d33;
            cursor: pointer;
            border: none;
            color: white;
            border-radius: 2rem;
            font-size : 1rem;
            padding : 0.5rem;
            padding-left : 1.25rem;
            padding-right : 1.25rem;
            margin-left : 1rem;
            margin-right : 1rem;

            @media screen and (min-width : 2400px) {
                margin-left : 2rem;
                margin-right : 2rem;
                padding : 0.55rem;
                padding-left : 2rem;
                padding-right : 2rem;
                font-size : 1.4rem;
                border-radius: 3rem;
            }

            
            @media screen and (max-width : 992px){
                margin-left : 2rem;
                margin-right : 2rem;
                padding : 0.55rem;
                padding-left : 2rem;
                padding-right : 2rem;
                font-size : 1.4rem;
                border-radius: 3rem;
            } 

            @media screen and (min-width : 3200px) {
                margin-left : 3rem;
                margin-right : 3rem;
                padding : 0.75rem;
                padding-left : 2.5rem;
                padding-right : 2.5rem;
                font-size : 1.8rem;
                border-radius: 3rem;
            }


            transition: 250ms background-color;
            will-change: background-color;
        }

        .logout:hover {
            background-color: #2baecf;
        }
    }
</style>